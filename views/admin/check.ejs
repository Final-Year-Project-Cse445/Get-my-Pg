<body class="body-wrapper">


<section class="login py-5 border-top-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8 align-item-center">
                    <div class="border border">
                        <h3 class="bg-gray p-4">Enter Admin Access Code</h3>
                        <form action="/admin" method="post">
                            <fieldset class="p-4">
                                <label for="code">
                                  <% if (error) { %>
                                      <%= error %>      
                                  <% } %>    
                                </label>
                                <input type="string" name="access" placeholder="Admin Access Code" class="border p-3 w-100 my-2">
                                <button type="submit" class="d-block py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold">Continue</button>
                                <a href="/home" class="btn  btn-sm mt-1 active bg-info text-white border-0 rounded font-weight-bold" role="button">Home</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


